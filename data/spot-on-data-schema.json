{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "http://TBD.TBD/spot-on-data-schema.json",
  "type": "object",
  "title": "Data for Spot On",
  "required": [
      "levelValue",
      "url",
      "correct",
      "incorrects",
      "answerHistory",
      "active"
  ],
  "properties": {
      "levelValue": {
          "type": "integer",
          "title": "The levelValue Schema",
          "examples": [
              0,
              1,
              2
          ]
      },
      "url": {
          "type": "string",
          "title": "The url Schema",
          "examples": [
              "/img/excavator.jpg"
          ]
      },
      "correct": {
          "type": "string",
          "title": "The correct Schema",
          "examples": [
              "Excavator"
          ]
      },
      "incorrects": {
          "type": "array",
          "default": [],
          "title": "The incorrects Schema",
          "items": {},
          "examples": [
              ["Backhoe Loader",
                  "Bulldozer"
              ]
          ]
      },
      "answerHistory": {
          "type": "object",
          "default": {},
          "title": "The answerHistory Schema",
          "required": [
              "correct",
              "incorrect"
          ],
          "properties": {
              "correct": {
                  "type": "integer",
                  "default": 0,
                  "title": "The correct Schema",
                  "examples": [
                      0
                  ]
              },
              "incorrect": {
                  "type": "integer",
                  "default": 0,
                  "title": "The incorrect Schema",
                  "examples": [
                      0
                  ]
              }
          },
          "examples": [{
              "correct": 9,
              "incorrect": 2
          }]
      },
      "active": {
          "type": "boolean",
          "default": true,
          "title": "The active Schema",
          "examples": [
              true,
              false
          ]
      }
  },
  "examples": [{
      "levelValue": 0,
      "url": "/img/excavator.jpg",
      "correct": "Excavator",
      "incorrects": [
          "Backhoe Loader",
          "Bulldozer"
      ],
      "answerHistory": {
          "correct": 9,
          "incorrect": 2
      },
      "active": true
  }],
  "description": "This document supplies data for the Spot On game"
}